class Addtwosum {
    public ListNode addTwoNumbers(ListNode l1, ListNode l2)
    {
        ListNode dummy = new ListNode(); // dummy is a link list that is for printing our anshwer
        ListNode temp = dummy;
        int carry = 0;
        
        while( l1!=null || l2!=null || carry==1)
        {
            int sum = 0;
            if(l1!=null)  // condition for our li1 
            {
                sum+=l1.val;
                l1=l1.next;
            }
            if(l2!=null)  // condition for our li2
            {
                sum+=l2.val;
                l2=l2.next;
            }
            sum+=carry;
            carry=sum/10;
            ListNode node = new ListNode(sum%10);
            temp.next = node;
            temp=temp.next;  
        }
        return dummy.next;  // for printing our anshwer 
    }
}
